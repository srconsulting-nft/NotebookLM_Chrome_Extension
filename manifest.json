{
    "manifest_version": 3,
    "name": "NotebookLM Collector Pro",
    "version": "3.2.8.1",
    "description": "Automatizaci√≥n profesional para NotebookLM (Universal Capture).",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://www.perplexity.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon128.png",
        "48": "icons/icon128.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon128.png",
            "48": "icons/icon128.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://notebooklm.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://gemini.google.com/*",
                "https://claude.ai/*",
                "https://www.perplexity.ai/*"
            ],
            "js": [
                "ai_injector.js"
            ],
            "run_at": "document_idle"
        }
    ]
}